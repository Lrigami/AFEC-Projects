{
    "openapi": "3.0.0",
    "info" : {
        "title": "To-Do List Exercise API",
        "description": "Exercise: CRUD with a To-Do List Management API",
        "version": "1.0.0"
    },
    "servers": {
        "url": "http://localhost:3000/api"
    }, 
    "paths": {
        "/api/tasks": {
            "get": {
                "summary": "Find all existing tasks",
                "description": "Get the information about all existing taks, with or without filtering by completion.",
                "operationId": "readAll",
                "parameters": [{
                    "name": "page",
                    "in": "query",
                    "description": "Page value that need to be considered for filter",
                    "schema" : {
                        "type": "integer"
                    }
                }, {
                    "name": "limit", 
                    "in": "query", 
                    "description": "Limit value that need to be considered for limiting number of responses",
                    "schema": {
                        "type": "integer"
                    }
                }, {
                    "name": "completed",
                    "in": "query", 
                    "description": "Value that need to be considered for filtering tasks by completion",
                    "schema": {
                        "type": "boolean",
                        "enum": [true, false]
                    }
                }], 
                "responses": {
                    "200": {
                        "description": "Successful operation.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "objects"
                                    }
                                }
                            }
                        }
                    }, 
                    "404": {
                        "description": "No matching tasks."
                    },
                    "500": {
                        "description": "Invalid query."
                    }
                }
            }, 
            "post": {
                "summary": "Add a new task to the list",
                "description": "Add a new task to the list.",
                "operationId": "create",
                "requestBody": {
                    "description": "Create a new task for the to-do list",
                    "content": {
                        "application/json": {
                            "schema": { "$ref": "#/components/schemas/Task"}
                        }
                    }, 
                    "required": true
                }, 
                "responses": {
                    "201": {
                        "description": "Successful operation.",
                        "content": {
                            "application/json": {
                                "schema": { "$ref": "#/components/schemas/Task"}
                            }
                        }
                    }, 
                    "400": {
                        "description": "Invalid input"
                    }, 
                    "500": {
                        "description": "Invalid query"
                    }
                }
            }
        }, 
        "/api/task/{id}": {
            "get": {
                "summary": "Find a task by ID",
                "description": "Returns a single task",
                "operationId": "readOne", 
                "parameters": [{
                    "name": "id", 
                    "in": "path",
                    "description": "ID of task to return",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }],
                "responses": {
                    "200": {
                        "description": "Successful operation.",
                        "content": {
                            "application/json": {
                                "schema": { "$ref": "#/components/schemas/Task"}
                            }
                        }
                    }, 
                    "404": {
                        "description": "Task not found"
                    }, 
                    "500": {
                        "description": "Invalid query"
                    }
                }
            }, 
            "put": {
                "summary": "Update task",
                "description": "Modify a task by changing its information and save it",
                "operationId": "Update", 
                "parameters": [{
                    "name": "id", 
                    "in": "path",
                    "description": "ID of task to return",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }],
                "requestBody": {
                    "description": "Create a new task for the to-do list",
                    "content": {
                        "application/json": {
                            "schema": { "$ref": "#/components/schemas/Task"}
                        }
                    }, 
                    "required": true
                }, 
                "responses": {
                    "201": {
                        "description": "Successful operation.",
                        "content": {
                            "application/json": {
                                "schema": { "$ref": "#/components/schemas/Task"}
                            }
                        }
                    }, 
                    "400": {
                        "description": "Invalid input"
                    }, 
                    "500": {
                        "description": "Invalid query"
                    }
                }
            },
            "delete": {
                "summary": "Delete a task", 
                "description": "Delete a task",
                "operationId": "Delete",
                "parameters": [{
                    "name": "id", 
                    "in": "path",
                    "description": "ID of task to return",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }],
                "responses": {
                    "200": {
                        "description": "Successful operation.",
                        "content": {
                            "application/json": {
                                "schema": { "$ref": "#/components/schemas/Task"}
                            }
                        }
                    }, 
                    "404": {
                        "description": "Task not found"
                    }, 
                    "500": {
                        "description": "Invalid query"
                    }
                }
            }
        }
    }, 
    "components": {
        "schemas": {
            "Task": {
                "type": "object", 
                "properties": {
                    "id": {
                        "type": "string", 
                        "example": "10"
                    }, 
                    "title": {
                        "type": "string", 
                        "required": "true"
                    }, 
                    "description": {
                        "type": "string"
                    }, 
                    "completed": {
                        "type": "boolean", 
                        "enum": [true, false],
                        "default": false
                    },
                    "createdAt": {
                        "type": "date",
                        "default": "Date.now()"
                    }
                }
            }
        }
    }
}